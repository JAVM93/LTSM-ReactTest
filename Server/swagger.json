
{
  "openapi": "3.0.0",
  "info": {
    "title": "LTSM API",
    "description": "This is a simple API",
    "contact": {
      "email": "itmanager@liceotallersanmiguel.edu.co"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Swagger Hub For LTSM APP"
    }
  ],
  "tags": [
    {
      "name": "admins",
      "description": "Secured Admin-only calls"
    },
    {
      "name": "users",
      "description": "Operaciones para usuarios."
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "tags": ["admins"],
        "summary": "Ruta para Registrar Usuarios nuevos",
        "description": "Registrar un usuario en el sistema.",
        "operationId": "regUsers",
        "requestBody": {
          "description": "register user to add",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/registerUser"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario Registrado"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "409": {
            "description": "El Usuario ya se encuentra registrado"
          },
          "500": {
            "description": "Error en el Registro"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["admins", "users"],
        "summary": "Ruta para Iniciar Sesión",
        "description": "Iniciar Sesión en el sistema.",
        "operationId": "loginUser",
        "requestBody": {
          "description": "register user to add",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/loginUser"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario Registrado"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "409": {
            "description": "El Usuario ya se encuentra registrado"
          },
          "500": {
            "description": "Error en el Registro"
          }
        }
      }
    },
    "/users/getUsers": {
      "get": {
        "tags": ["users"],
        "summary": "Buscar usuarios",
        "description": "Lista todos los usuarios de la base de datos",
        "operationId": "listUsers",
        "responses": {
          "200": {
            "description": "Lista de usuarios encontrados"
          },
          "400": {
            "description": "No se encontraron usuarios"
          }
        }
      }
    },
    "/users/find/{id}": {
      "get": {
        "tags": ["users"],
        "summary": "Buscar usuario por ID",
        "description": "Buscar un usuario por su ID",
        "operationId": "findUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del usuario",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario encontrado"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["users"],
        "summary": "Buscar usuario por ID",
        "description": "Buscar un usuario por su ID",
        "operationId": "findUserByID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del usuario",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario encontrado"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    },
    "/users/update/{id}": {
      "patch": {
        "tags": ["users"],
        "summary": "Actualizar usuario",
        "description": "Actualizar los datos de un usuario",
        "operationId": "updateUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del usuario",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "Datos del usuario a actualizar",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/updateUser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario actualizado"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    },
    "/users/delete/{id}": {
      "delete": {
        "tags": ["users"],
        "summary": "Eliminar usuario",
        "description": "Eliminar un usuario",
        "operationId": "deleteUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del usuario",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario eliminado"
          },
          "400": {
            "description": "invalid input, object invalid"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "registerUser": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "example": "alejandro"
          },
          "lastName": {
            "type": "string",
            "example": "vasquez"
          },
          "usercode": {
            "type": "string",
            "example": "1000000000"
          },
          "password": {
            "type": "string",
            "example": "Abcd1234$%"
          },
          "rol": {
            "type": "string",
            "example": "administrador - usuario"
          },
          "jobArea": {
            "type": "string",
            "example": "tecnologia - mantenimiento"
          }
        },
        "required": ["firstName", "lastName", "usercode", "password", "rol", "jobArea"]
      },
      "loginUser": {
        "type": "object",
        "properties": {
          "usercode": {
            "type": "string",
            "example": "1000000000"
          },
          "password": {
            "type": "string",
            "example": "Abcd1234$%"
          }
        },
        "required": ["usercode", "password"]
      },
      "updateUser": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "example": "alejandro"
          },
          "lastName": {
            "type": "string",
            "example": "vasquez"
          },
          "usercode": {
            "type": "string",
            "example": "1000000000"
          },
          "password": {
            "type": "string",
            "example": "Abcd1234$%"
          },
          "rol": {
            "type": "string",
            "example": "administrador - usuario"
          },
          "jobArea": {
            "type": "string",
            "example": "tecnologia - mantenimiento"
          }
        },
        "required": ["firstName", "lastName", "usercode", "password", "rol", "jobArea"]
      }
    }
  }
}